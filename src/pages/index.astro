---
import Layout from "../layouts/BaseLayout.astro"
---

<Layout title="Diato - 요일별 할 일">
  <div class="flex flex-row items-center justify-between">
    <button type="button" class="transition duration-200 hover:opacity-50">
      <p class="text-4xl font-bold">4월 21일</p>
    </button>

    <button type="button"
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6 transition duration-200 hover:opacity-50"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z"
        ></path>
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
    </button>
  </div>
  <div class="py-4"></div>
  <div class="flex flex-row items-center justify-between gap-x-4">
    <button
      type="button"
      class="h-8 w-8 grid place-items-center rounded-lg transition duration-200 hover:bg-black/5 text-neutral-700"
    >
      <p class="text-xl font-bold">일</p>
    </button>
    <button
      type="button"
      class="h-8 w-8 grid place-items-center rounded-lg transition duration-200 hover:bg-black/5 text-neutral-700"
    >
      <p class="text-xl font-bold">월</p>
    </button>
    <button
      type="button"
      class="h-8 w-8 grid place-items-center rounded-lg transition duration-200 hover:bg-black/5 text-neutral-700"
    >
      <p class="text-xl font-bold">화</p>
    </button>
    <button
      type="button"
      class="h-8 w-8 grid place-items-center rounded-lg transition duration-200 hover:bg-black/5 text-neutral-700"
    >
      <p class="text-xl font-bold">수</p>
    </button>
    <button
      type="button"
      class="h-8 w-8 grid place-items-center rounded-lg transition duration-200 hover:bg-black/5 text-neutral-700"
    >
      <p class="text-xl font-bold">목</p>
    </button>
    <button
      type="button"
      class="h-8 w-8 grid place-items-center rounded-lg transition duration-200 hover:bg-black/5 text-neutral-700"
    >
      <p class="text-xl font-bold">금</p>
    </button>
    <button
      type="button"
      class="h-8 w-8 grid place-items-center rounded-lg transition duration-200 hover:bg-black/5 text-neutral-700"
    >
      <p class="text-xl font-bold">토</p>
    </button>
  </div>
  <div class="flex flex-col gap-y-4 py-10">
    <div class="flex flex-row items-start gap-x-4">
      <input type="checkbox" class="flex-none rounded-xl w-4 h-4 mt-1" />
      <div
        contenteditable="true"
        data-ph="Type here"
        class="flex-1 w-full outline-none focus:border-b border-neutral-200 empty:before:content-[attr(data-ph)] before:text-neutral-500 before:cursor-text"
        spellcheck="false"
      ></div>
    </div>
  </div>
</Layout>
